{% extends 'base.html.twig' %}

{% block title %}Главная страница{% endblock %}

{% block stylesheets %}
<head>
    <style>
        form {
            margin: 0 auto;
            width: 480px;
            padding: 2em;
            border: 2px solid #CCC;
            border-radius: 1em;
        }

        label {
            display: inline-block;
            width: 180px;
            text-align: right;
        }

        input, text{
            font: 1em sans-serif;
            width: 270px;
            box-sizing: border-box;
            border: 1px solid #999;
        }

        .button {
            width: 100px;
        }
    </style>
</head>
{% endblock %}

{% block body %}
    <form action={{ path('recipe_list')}} method="get">
        <label for="include_vitamins">Включить витамины:</label>
        <input type="text" name="include_vitamins"><br><br>
        <label for="include_ingredients">Включить ингредиенты:</label>
        <input type="text" name="include_ingredients"><br><br>
        <label for="exclude_vitamins">Исключить витамины:</label>
        <input type="text" name="exclude_vitamins"><br><br>
        <label for="exclude_ingredients">Исключить ингредиенты:</label>
        <input type="text" name="exclude_ingredients"><br><br>
        <input type="submit" value="Найти" class="button">
    </form>
{% endblock %}
